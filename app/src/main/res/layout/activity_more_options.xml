<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/gehu"
    android:gravity="center"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MoreOptionsActivity">


    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="#AEFFFFFF"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        android:layout_marginHorizontal="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/txt_academicCalender"
                android:layout_marginVertical="10dp"
                android:background="@drawable/bg_topbar_white"
                android:padding="5dp"
                android:textSize="20dp"
                android:gravity="center"
                android:text="Academic Calender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginVertical="10dp"
                android:background="@drawable/bg_topbar_white"
                android:padding="5dp"
                android:textSize="20dp"
                android:gravity="center"
                android:text="Syallabus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txt_RepRagging"
                android:layout_marginVertical="10dp"
                android:background="@drawable/bg_topbar_white"
                android:padding="5dp"
                android:textSize="20dp"
                android:gravity="center"
                android:text="Report ragging"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/EmerContact"
                android:layout_marginVertical="10dp"
                android:background="@drawable/bg_topbar_white"
                android:padding="5dp"
                android:textSize="20dp"
                android:gravity="center"
                android:text="Emergency Contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txt_transportation"
                android:layout_marginVertical="10dp"
                android:background="@drawable/bg_topbar_white"
                android:padding="5dp"
                android:textSize="20dp"
                android:gravity="center"
                android:text="Transportation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txt_logOUT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:background="@drawable/bg_topbar_white"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:padding="5dp"
                android:text="Sign out"
                android:textColor="#F80000"
                android:textSize="20dp" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>




</LinearLayout>